@page "/"
@inject IJSRuntime JS

<section class="hero">


</section>

<section class="hero"><h1>Praticidade, organização e confiança para o lar</h1>
    <p>
        A Mater Domus nasce com o propósito de levar produtos funcionais,
        bem selecionados e acessíveis para o dia a dia das famílias brasileiras.
    </p>

    <div class="hero-actions"><a class="btn-primary" href="/fornecedores" @onclick="TrackHomeSupplierCtaClick">Seja nosso fornecedor</a>
        <a class="btn-secondary" href="/sobre" @onclick="TrackHomeAboutCtaClick">Conheça a Mater Domus</a></div></section>

<section><h2>O que fazemos</h2>
    <p>
        Atuamos no comércio eletrônico, com foco em marketplaces como a Amazon,
        selecionando produtos de qualidade nas categorias de utilidades domésticas,
        organização e itens para casa.
    </p></section>

@code {
    private ValueTask TrackHomeSupplierCtaClick()
    {
        return TrackCtaClick("home_fornecedores");
    }

    private ValueTask TrackHomeAboutCtaClick()
    {
        return TrackCtaClick("home_sobre");
    }

    private ValueTask TrackCtaClick(string cta)
    {
        return JS.InvokeVoidAsync("trackEvent", "cta_click", new
        {
            page = "home",
            cta_name = cta,
            funnel = "supplier_acquisition"
        });
    }
}
